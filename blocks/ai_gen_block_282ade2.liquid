{% doc %}
  @prompt
    “Create a minimal black and white countdown timer section that starts counting down from 10 minutes when a user logs into the store.
    
    Requirements:
    
    The timer should reset every time the user logs out and logs back in.
    
    Use sessionStorage or similar to keep the timer running while browsing.
    
    When time runs out, display a message such as ‘Time’s up!’.
    
    Include a headline, subtext, and button (all editable in Theme settings).
    
    Must be responsive and mobile-friendly with a clean monochrome design.
    
    Add invert colors and compact mode options in the Theme Editor.
    
    Code should be lightweight, use vanilla JS, and have no external libraries.
    
    Ensure accessible text and smooth countdown animation.”
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-countdown-timer-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    text-align: center;
    {% if block.settings.invert_colors %}
      filter: invert(1);
    {% endif %}
  }

  .ai-countdown-timer-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-countdown-timer-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: 700;
    margin: 0 0 {{ block.settings.spacing }}px;
    line-height: 1.2;
  }

  .ai-countdown-timer-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtext_size }}px;
    margin: 0 0 {{ block.settings.spacing }}px;
    line-height: 1.5;
    opacity: 0.9;
  }

  .ai-countdown-display-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: {{ block.settings.timer_gap }}px;
    margin: {{ block.settings.spacing }}px 0;
    flex-wrap: wrap;
  }

  .ai-countdown-unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: {% if block.settings.compact_mode %}60px{% else %}80px{% endif %};
  }

  .ai-countdown-number-{{ ai_gen_id }} {
    font-size: {% if block.settings.compact_mode %}{{ block.settings.timer_size | times: 0.8 }}px{% else %}{{ block.settings.timer_size }}px{% endif %};
    font-weight: 700;
    line-height: 1;
    font-variant-numeric: tabular-nums;
    transition: transform 0.3s ease;
  }

  .ai-countdown-label-{{ ai_gen_id }} {
    font-size: {% if block.settings.compact_mode %}{{ block.settings.label_size | times: 0.8 }}px{% else %}{{ block.settings.label_size }}px{% endif %};
    margin-top: 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.8;
  }

  .ai-countdown-message-{{ ai_gen_id }} {
    font-size: {{ block.settings.message_size }}px;
    font-weight: 600;
    margin: {{ block.settings.spacing }}px 0;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .ai-countdown-message-{{ ai_gen_id }}.visible {
    opacity: 1;
  }

  .ai-countdown-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_bg_color }};
    cursor: pointer;
  }

  .ai-countdown-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg }};
    border-color: {{ block.settings.button_hover_bg }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-countdown-timer-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-countdown-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.7 }}px;
    }

    .ai-countdown-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.85 }}px;
    }

    .ai-countdown-number-{{ ai_gen_id }} {
      font-size: {% if block.settings.compact_mode %}{{ block.settings.timer_size | times: 0.6 }}px{% else %}{{ block.settings.timer_size | times: 0.7 }}px{% endif %};
    }

    .ai-countdown-label-{{ ai_gen_id }} {
      font-size: {% if block.settings.compact_mode %}{{ block.settings.label_size | times: 0.7 }}px{% else %}{{ block.settings.label_size | times: 0.8 }}px{% endif %};
    }

    .ai-countdown-unit-{{ ai_gen_id }} {
      min-width: {% if block.settings.compact_mode %}50px{% else %}60px{% endif %};
    }

    .ai-countdown-button-{{ ai_gen_id }} {
      padding: 12px 24px;
      font-size: {{ block.settings.button_size | times: 0.9 }}px;
    }
  }

  @keyframes ai-countdown-pulse-{{ ai_gen_id }} {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .ai-countdown-number-{{ ai_gen_id }}.pulse {
    animation: ai-countdown-pulse-{{ ai_gen_id }} 0.5s ease;
  }
{% endstyle %}

<countdown-timer-{{ ai_gen_id }}
  class="ai-countdown-timer-{{ ai_gen_id }}"
  data-duration="{{ block.settings.countdown_duration }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-countdown-timer-container-{{ ai_gen_id }}">
    {% if block.settings.headline != blank %}
      <h2 class="ai-countdown-timer-headline-{{ ai_gen_id }}">{{ block.settings.headline }}</h2>
    {% endif %}

    {% if block.settings.subtext != blank %}
      <div class="ai-countdown-timer-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
    {% endif %}

    <div class="ai-countdown-display-{{ ai_gen_id }}">
      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-number-{{ ai_gen_id }}" data-unit="minutes">10</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">Minutes</div>
      </div>
      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-number-{{ ai_gen_id }}" data-unit="seconds">00</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">Seconds</div>
      </div>
    </div>

    <div class="ai-countdown-message-{{ ai_gen_id }}" role="status" aria-live="polite">
      {{ block.settings.timeout_message }}
    </div>

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-countdown-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</countdown-timer-{{ ai_gen_id }}>

<script>
  (function() {
    class CountdownTimer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.duration = parseInt(this.dataset.duration) * 60;
        this.storageKey = 'countdown_timer_{{ ai_gen_id }}';
        this.interval = null;
      }

      connectedCallback() {
        this.minutesEl = this.querySelector('[data-unit="minutes"]');
        this.secondsEl = this.querySelector('[data-unit="seconds"]');
        this.messageEl = this.querySelector('.ai-countdown-message-{{ ai_gen_id }}');

        if (typeof window.Shopify !== 'undefined' && window.Shopify.designMode) {
          this.startCountdown();
          return;
        }

        this.checkCustomerLogin();
      }

      checkCustomerLogin() {
        const isLoggedIn = document.body.classList.contains('customer-logged-in') || 
                          document.querySelector('[data-customer-logged-in]') !== null;

        if (isLoggedIn) {
          this.initTimer();
        } else {
          this.hideTimer();
        }
      }

      hideTimer() {
        this.style.display = 'none';
      }

      initTimer() {
        const savedData = sessionStorage.getItem(this.storageKey);
        
        if (savedData) {
          const data = JSON.parse(savedData);
          const elapsed = Math.floor((Date.now() - data.startTime) / 1000);
          this.remainingTime = Math.max(0, data.duration - elapsed);
        } else {
          this.remainingTime = this.duration;
          this.saveTimerState();
        }

        this.startCountdown();
      }

      saveTimerState() {
        const data = {
          startTime: Date.now(),
          duration: this.duration
        };
        sessionStorage.setItem(this.storageKey, JSON.stringify(data));
      }

      startCountdown() {
        this.updateDisplay();

        if (this.remainingTime <= 0) {
          this.showTimeoutMessage();
          return;
        }

        this.interval = setInterval(() => {
          this.remainingTime--;
          this.updateDisplay();

          if (this.remainingTime <= 0) {
            this.stopCountdown();
            this.showTimeoutMessage();
          }
        }, 1000);
      }

      updateDisplay() {
        const minutes = Math.floor(this.remainingTime / 60);
        const seconds = this.remainingTime % 60;

        const minutesStr = String(minutes).padStart(2, '0');
        const secondsStr = String(seconds).padStart(2, '0');

        if (this.minutesEl.textContent !== minutesStr) {
          this.minutesEl.textContent = minutesStr;
          this.animateNumber(this.minutesEl);
        }

        if (this.secondsEl.textContent !== secondsStr) {
          this.secondsEl.textContent = secondsStr;
          this.animateNumber(this.secondsEl);
        }
      }

      animateNumber(element) {
        element.classList.remove('pulse');
        void element.offsetWidth;
        element.classList.add('pulse');
      }

      showTimeoutMessage() {
        if (this.messageEl) {
          this.messageEl.classList.add('visible');
        }
      }

      stopCountdown() {
        if (this.interval) {
          clearInterval(this.interval);
          this.interval = null;
        }
      }

      disconnectedCallback() {
        this.stopCountdown();
      }
    }

    customElements.define('countdown-timer-{{ ai_gen_id }}', CountdownTimer{{ ai_gen_id }});
  })();
</script>

