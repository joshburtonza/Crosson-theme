{% doc %}
  @prompt
    Cover photo

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-cover-photo-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.height_desktop }}px;
    overflow: hidden;
    display: flex;
    align-items: {{ block.settings.content_alignment }};
    justify-content: {{ block.settings.content_position }};
  }

  .ai-cover-photo-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-cover-photo-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-cover-photo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-cover-photo-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-cover-photo-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-cover-photo-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    padding: 40px 20px;max-width: {{ block.settings.content_width }}px;
    width: 100%;
  }

  .ai-cover-photo-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-cover-photo-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
    line-height: 1.4;
    opacity: 0.9;
  }

  .ai-cover-photo-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-cover-photo-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-cover-photo-{{ ai_gen_id }} {
      height: {{ block.settings.height_mobile }}px;
    }

    .ai-cover-photo-content-{{ ai_gen_id }} {
      padding: 20px 16px;
    }

    .ai-cover-photo-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-cover-photo-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-cover-photo-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.image %}
    <img
      src="{{ block.settings.image | image_url: width: 2000 }}"
      alt="{{ block.settings.image.alt | escape }}"
      class="ai-cover-photo-image-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.image.width }}"
      height="{{ block.settings.image.height }}"
    >
  {% else %}
    <div class="ai-cover-photo-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}<div class="ai-cover-photo-empty-state-{{ ai_gen_id }}">
        Add a cover photo to get started
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-cover-photo-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  {% if block.settings.heading != blank or block.settings.subheading != blank or block.settings.button_text != blank %}
    <div class="ai-cover-photo-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-cover-photo-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <p class="ai-cover-photo-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-cover-photo-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  {% endif %}
</div>

