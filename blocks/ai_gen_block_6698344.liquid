{% doc %}
  @prompt
    Create a video gallery section called ‘Playvooo in Action’ that displays 3 videos side by side in equal columns. Each video should have a clean rounded-corner frame, autoplay on hover, and look optimized for mobile and desktop. Add a heading above the videos and make it editable., remove all extra space, i wanna uplode manually video there, video size will be reels, here is option like paste video link. w, here is option like paste video link. i dont like this option, i want manual uplode option

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
.ai-video-gallery-{{ ai_gen_id }} {
  padding: 40px 20px;
  background-color: {{ block.settings.background_color }};
}

.ai-video-gallery__container-{{ ai_gen_id }} {
  max-width: 1200px;
  margin: 0 auto;
}

.ai-video-gallery__heading-{{ ai_gen_id }} {
  text-align: {{ block.settings.heading_alignment }};
  margin-bottom: 40px;
  font-size: {{ block.settings.heading_size }}px;
  color: {{ block.settings.heading_color }};
  font-weight: 600;
}

.ai-video-gallery__grid-{{ ai_gen_id }} {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

.ai-video-gallery__item-{{ ai_gen_id }} {
  position: relative;
  border-radius: {{ block.settings.video_border_radius }}px;
  overflow: hidden;
  background-color: #f4f4f4;
  aspect-ratio: 9/16;
}

.ai-video-gallery__video-{{ ai_gen_id }} {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: {{ block.settings.video_border_radius }}px;transition: transform 0.3s ease;
}

.ai-video-gallery__video-{{ ai_gen_id }}:hover {
  transform: scale(1.02);
}

.ai-video-gallery__placeholder-{{ ai_gen_id }} {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f4f4f4;
  border-radius: {{ block.settings.video_border_radius }}px;position: relative;
}

.ai-video-gallery__placeholder-{{ ai_gen_id }} svg {
  width: 60px;
  height: 60px;
  color: #999;
}

.ai-video-gallery__empty-state-{{ ai_gen_id }} {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 14px;
  color: #666;
  text-align: center;
  pointer-events: none;
}

@media screen and (max-width: 990px) {
  .ai-video-gallery__grid-{{ ai_gen_id }} {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
}

@media screen and (max-width: 749px) {
  .ai-video-gallery-{{ ai_gen_id }} {
    padding: 30px 16px;
  }
  
  .ai-video-gallery__grid-{{ ai_gen_id }} {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .ai-video-gallery__heading-{{ ai_gen_id }} {
    margin-bottom: 30px;
    font-size: {{ block.settings.heading_size | times: 0.8 }}px;
  }
}
{% endstyle %}

<video-gallery-{{ ai_gen_id }} class="ai-video-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-gallery__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-video-gallery__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    
    <div class="ai-video-gallery__grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign video_key = 'video_' | append: i
          assign video = block.settings[video_key]
        %}
        <div class="ai-video-gallery__item-{{ ai_gen_id }}">
          {% if video != blank %}
            <video
              class="ai-video-gallery__video-{{ ai_gen_id }}"
              muted
              loop
              preload="metadata"
              data-video-index="{{ i }}"
            >
              <source src="{{ video }}" type="video/mp4"></video>
          {% else %}
            <div class="ai-video-gallery__placeholder-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="23 7 16 12 23 17 23 7"></polygon>
                <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
              </svg>
              <div class="ai-video-gallery__empty-state-{{ ai_gen_id }}">
                Upload video {{ i }}
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</video-gallery-{{ ai_gen_id }}><script>
(function() {
  class VideoGallery{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();}

    connectedCallback() {
      this.videos = this.querySelectorAll('.ai-video-gallery__video-{{ ai_gen_id }}');
      this.setupVideoEvents();
    }

    setupVideoEvents() {
      this.videos.forEach(video => {
        video.addEventListener('mouseenter', () => {
          video.play().catch(e => {
            console.log('Video autoplay failed:', e);
          });
        });

        video.addEventListener('mouseleave', () => {
          video.pause();
          video.currentTime = 0;
        });

        video.addEventListener('loadedmetadata', () => {
          video.currentTime = 0;
        });
      });
    }
  }

  customElements.define('video-gallery-{{ ai_gen_id }}', VideoGallery{{ ai_gen_id }});
})();
</script>

