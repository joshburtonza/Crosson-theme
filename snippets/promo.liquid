{%- capture icon_with_text -%}
{%- if block.settings.custom_icon == null -%}
  <span style="width: {{ block.settings.icon_width }}px;min-width: {{ block.settings.icon_width }}px;height: {{ block.settings.icon_width }}px;">
   {%- render 'icon-accordion', icon: block.settings.icon -%}
  </span>
{%- else -%}
      <img
          src="{{ block.settings.custom_icon | image_url }}"
          role="presentation"
          height="auto"
          width="{{ block.settings.icon_width }}px"
          loading="lazy"
        >
{%- endif -%}
  <span style="font-size: {{ block.settings.font_size }}%;">
     {{- block.settings.content -}}
  </span>
{%- endcapture -%}

{%- if icon_with_text != blank -%}
  <div class="text-with-icon" {{ block.shopify_attributes }}>
    {{- icon_with_text -}}
  </div>
{%- endif -%}

